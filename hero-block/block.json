{
	"$schema": "https://json.schemastore.org/block.json",
	"apiVersion": 2,
	"name": "create-block/hero-block",
	"version": "0.1.0",
	"title": "Copywriter: Hero Block",
	"category": "layout",
	"icon": "index-card",
	"description": "A hero block for Copywriter Theme created by by Aman Thakur",
	"supports": {
		"html": false
	},
	"attributes": {
		"title": {
			"type": "string",
			"source": "html",
			"selector": ".hero-block__title"
		},
		"content": {
			"type": "string",
			"source": "html",
			"selector": ".hero-block__content"
		},
		"primaryButtonText": {
			"type": "string"
		},
		"primaryButtonURL": {
			"type": "string",
			"source": "attribute",
			"selector": ".primary.hero-block__button",
			"attribute": "href"
		},
		"secondaryButtonText": {
			"type": "string"
		},
		"secondaryButtonURL": {
			"type": "string",
			"source": "attribute",
			"selector": ".secondary.hero-block__button",
			"attribute": "href"
		},
		"imageID": {
			"type": "number"
		},
		"imageURL": {
			"type": "string",
			"source": "attribute",
			"selector": "img",
			"attribute": "src"
		},
		"imageAlt": {
			"type": "string",
			"source": "attribute",
			"attribute": "alt",
			"selector": "img"
		},
		"backgroundOpacity": {
			"type": "number",
			"default": 50
		},
		"backgroundColor": {
			"type": "string"
		},
		"titleFontSize": {
			"type": "number",
			"default": 32
		},
		"contentFontSize": {
			"type": "number",
			"default": 19
		},
		"contentColor": {
			"type": "string"
		},
		"primaryButtonColor": {
			"type": "string"
		},
		"secondaryButtonColor": {
			"type": "string"
		},
		"primaryButtonBackgroundColor": {
			"type": "string"
		},
		"secondaryButtonBorderColor": {
			"type": "string"
		},
		"showSecondaryButton": {
			"type": "boolean"
		},
		"contentAlignment": {
			"type": "string",
			"default": "left"
		}
	},
	"styles": [
		{
			"name": "default",
			"label": "Main (default)",
			"isDefault": true
		},
		{
			"name": "dark",
			"label": "Dark Style"
		}
	],
	"textdomain": "copywriter-theme-block",
	"editorScript": "file:./build/index.js",
	"editorStyle": "file:./build/index.css",
	"style": "file:./build/style-index.css"
}
